<div class="lockscreen-wrapper">
    <div class="lockscreen-logo">
        <a href="../../index2.html"><b>Admin</b>LTE</a>
    </div>


    <div class="lockscreen-item">
        <!-- lockscreen image -->
        <div class="lockscreen-image">
            <img src="../../dist/img/user1-128x128.jpg" alt="User Image">
        </div>
        <!-- /.lockscreen-image -->

        <!-- lockscreen credentials (contains the form) -->
        <form class="lockscreen-credentials" method="POST" action="/verifyCode">
            <div class="input-group">
                <input type="text" class="form-control" name="verifyCodeForm" placeholder="Verify Code">
                <input type="hidden" name="token" value='<%= typeof token !="undefined" ? token: "" %>'>
                <input type="hidden" name="id" value='<%= typeof id !="undefined" ? id: "" %>'>
                <div class="input-group-append">
                    <button type="submit" class="btn">
                        <i class="fas fa-arrow-right text-muted"></i>
                    </button>
                </div>
            </div>
        </form>
        <!-- /.lockscreen credentials -->

    </div>
    <!-- /.lockscreen-item -->

    <div class="text-center">
        <% if (locals.validateError !=undefined || locals.successMessage !=undefined || locals.error !=undefined) { %>
            <%- include("./messages/message") %>
                <% } %>
    </div>

</div>